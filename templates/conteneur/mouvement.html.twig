{% extends 'base.html.twig' %}

{% block title %}Déplacer un Conteneur{% endblock %}

{% block body %}
    {% for message in app.flashes('MouvementImpossible') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <h1>ID : {{ conteneur.id}}</h1>
    <h2>{{ conteneur.codeConteneur }}</h2>
    <h2>{{ conteneur.idStock}}</h2>
    <h2>{{ conteneur.idProduit.partNumber }} - {{ conteneur.idProduit.denomination }}</h2>
    {{ include('conteneur/_form.html.twig', {'button_label': 'Déplacer'}) }}

    <a href="{{ path('app_conteneur_index') }}">back to list</a>


{% endblock %}
