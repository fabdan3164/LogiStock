{% extends 'base.html.twig' %}

{% block title %}Hello FluxController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<table class="table">
    <thead>
    <tr>
        <th>Type</th>
        <th>Quantit√©</th>
        <th>Code Conteneur</th>
        <th>Adresse</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    {% for mouvement in flux %}
        <tr>
            <td>{{ mouvement.type }}</td>
            <td>{{ mouvement.quantite }}</td>
            <td>{{ mouvement.codeConteneur}}</td>
            <td>{{ mouvement.adresseStock}}</td>
            <td>{{ mouvement.dateFlux | date('Y-m-d H:i:s')}}</td>

        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>

{% endblock %}
