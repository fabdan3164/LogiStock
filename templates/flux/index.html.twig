{% extends 'base.html.twig' %}

{% block title %}Mouvements de stock{% endblock %}

{% block body %}
<style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="row justify-content-center">
    <img class="col-4 mt-2" src="{{ asset('img/separatorBlack.svg') }}">
    <h1 class="text-center">Mouvements de stock</h1>
    <img class="col-4 mb-2" src="{{ asset('img/separatorBlack.svg') }}">


</div>
    <div  class="row justify-content-end">
    <input type="search" class="light-table-filter col-3" data-table="table" placeholder="Recherche">
    </div>
<table class="table table-striped mt-3 border-white">
    <thead>
    <tr>
        <th>Code Conteneur</th>
        <th>Type</th>
        <th>Quantit√©</th>
        <th>Part Number</th>
        <th>Adresse</th>
        <th>Document</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    {% for mouvement in flux %}
        <tr>
            <td><a href="{{ path('app_flux_show' , {'codeConteneur': mouvement.codeConteneur}) }}">{{ mouvement.codeConteneur}}</a></td>
            <td>{{ mouvement.type }}</td>
            <td>{{ mouvement.quantite }}</td>
            <td>{{ mouvement.partNumber }}</td>
            <td>{{ mouvement.adresseStock}}</td>
            <td>{{ mouvement.origine}}</td>
            <td>{{ mouvement.dateFlux | date('Y-m-d H:i:s')}}</td>

        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>


{% endblock %}