{% extends 'base.html.twig' %}

{% block title %}Mouvements de stock{% endblock %}

{% block body %}

    <div class="container mt-3">
<div class="row justify-content-center">
    <img class="col-3" src="{{ asset('img/separator.svg') }}">
    <h1 class="text-center">Mouvements de stock</h1>
    <img class="col-3" src="{{ asset('img/separator.svg') }}">
</div>
    </div>
    <div class="container mb-3">
        <div class="row justify-content-between">
            <input type="search" class="light-table-filter col-2" data-table="table" placeholder="Recherche">
            <a class="text-center col-1 p-0" href="{{ path('app_main') }}">Retour<i
                        class="fa-solid fa-arrow-right-to-bracket"></i></a>
        </div>
    </div>
<table class="table table-striped border-white ">
    <thead>
    <tr>
        <th class="col-2">Code Conteneur</th>
        <th class="col-2">Type</th>
        <th class="col-1">Quantit√©</th>
        <th class="col-2">Part Number</th>
        <th class="col-1">Adresse</th>
        <th class="col-2">Document</th>
        <th class="col-2">Date</th>
    </tr>
    </thead>
    <tbody>
    {% for mouvement in flux %}
        <tr>
            <td class="col-2"><a href="{{ path('app_flux_show' , {'codeConteneur': mouvement.codeConteneur}) }}">{{ mouvement.codeConteneur}}</a></td>
            <td class="col-2">{{ mouvement.type }}</td>
            <td class="col-1">{{ mouvement.quantite }}</td>
            <td class="col-2">{{ mouvement.partNumber }}</td>
            <td class="col-1">{{ mouvement.adresseStock}}</td>
            <td class="col-2">{{ mouvement.origine}}</td>
            <td class="col-2">{{ mouvement.dateFlux | date('Y-m-d H:i:s')}}</td>

        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}