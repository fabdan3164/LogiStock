{% extends 'base.html.twig' %}

{% block title %}Ligne index{% endblock %}

{% block body %}
    <h1>Ligne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero de commande</th>
                <th>Quantite</th>
                <th>Produit</th>
                <th>Statut</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for ligne in lignes %}
            <tr>
                <td>{{ ligne.id }}</td>
                <td>{{ ligne.idCommande }}</td>
                <td>{{ ligne.quantite }}</td>
                <td>{{ ligne.idProduit }} - {{ ligne.idProduit.denomination }}</td>
                <td>{{ ligne.idStatut }}</td>
                <td>
                    <a href="{{ path('app_ligne_edit', {'id': ligne.id}) }}">Edit</a>
                    {{ include('ligne/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
