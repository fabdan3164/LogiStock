{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}






    <div class="container ">
        <div class="row align-items-center justify-content-center">

            <div class="card-sl col-12 p-0 m-0">



                <div class="card-heading">
                    <div class="row align-items-center justify-content-center">
                        <img class="col-3" src="{{ asset('img/separator.svg') }}">
                        <h1 class="text-center">Inscription</h1>
                        <img class="col-3" src="{{ asset('img/separator.svg') }}">
                    </div>
                </div>

                <div class="card-text p-0 ">

                    {{ form_start(registrationForm, {'attr': {'class': 'row m-0 justify-content-center'}})  }}
                    {{ form_row(registrationForm.identifiant , { 'attr': {'class': 'col-12 mt-2 text-center '}}) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password','attr': {'class': 'col-12 mt-2 text-center '}
                    }) }}
                    {{ form_row(registrationForm.nom, {'attr': {'class': 'col-12 mt-2 text-center '}}) }}
                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'col-12 mt-2 text-center '}}) }}
                    {{ form_row(registrationForm.telephone, {'attr': {'class': 'col-12 mt-2 text-center '}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'col-12 mt-2 text-center '}}) }}
                    {{ form_row(registrationForm.adresse, {'attr': {'class': 'col-12 mt-2 text-center '}}) }}
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'col-2 mt-2 text-center '}}) }}
                    <button class="card-button mt-3 border-0" type="submit" >Valider</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
