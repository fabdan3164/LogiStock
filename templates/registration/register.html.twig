{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container ">
        <div class="row align-items-center justify-content-center">

            <div class="card-sl col-12 p-0 m-0">

                <div class="card-heading">
                    <div class="row align-items-center justify-content-center">
                        <img class="col-3" src="{{ asset('img/separator.svg') }}">
                        <h1 class="text-center">Inscription</h1>
                        <img class="col-3" src="{{ asset('img/separator.svg') }}">
                    </div>
                </div>

                <div class=" p-0 mt-5">

                    {{ form_start(registrationForm, {'attr': {'class': 'row m-0 justify-content-center'}})  }}



                    <div class=" row justify-content-between col-7 ">
                        {{ form_label(registrationForm.identifiant, 'Identifiant', { 'label_attr': {'class': 'col-4'}} ) }}
                        {{ form_widget(registrationForm.identifiant, {
                            'attr': {'class': '  col-8'}}) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_label(registrationForm.plainPassword , 'Mot de passe', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {'class': 'col-8'}
                        }) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_label(registrationForm.nom , 'Nom', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'col-8'}}) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_label(registrationForm.prenom , 'Prénom', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'col-8'}}) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_label(registrationForm.telephone, 'Téléphone', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.telephone, {'attr': {'class': 'col-8'}}) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_errors(registrationForm.email) }}
                        {{ form_label(registrationForm.email, 'Email', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'col-8'}}) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_label(registrationForm.adresse , 'Adresse', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.adresse, {'attr': {'class': 'col-8'}}) }}
                    </div>

                    <div class="row justify-content-between col-7 mt-4">
                        {{ form_label(registrationForm.agreeTerms, 'Charte d\'utilisation', { 'label_attr': {'class': 'col-4'}}) }}
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'col-8'}}) }}
                    </div>
                    <div class="col-12 m-5">
                        <button type="submit" class="card-button" style="width:20%; border-radius: 8px 8px; margin:1px auto;">
                            Valider
                        </button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
