{% extends 'base.html.twig' %}

{% block title %}Bon de livraison{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <img class="col-3" src="{{ asset('img/separator.svg') }}">
            <h1 class="text-center">Bon de livraison</h1>
            <img class="col-3" src="{{ asset('img/separator.svg') }}">
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-between">

            <input type="search" class="light-table-filter col-2" data-table="table" placeholder="Recherche">

            {% if is_granted('ROLE_ADMIN') %}
                <a class="col-2" href="{{ path('app_reception_new') }}">Enregistrer un bon de livraison <i class="fa-solid fa-arrow-right-to-bracket"></i></a>
            {% endif %}
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bon de livraison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reception in receptions %}
            <tr>
                <td>{{ reception.id }}</td>
                <td>{{ reception.bonDeCommande }}</td>
                <td>
                    <a href="{{ path('app_reception_show', {'id': reception.id}) }}">show</a>
                    <a href="{{ path('app_reception_edit', {'id': reception.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
